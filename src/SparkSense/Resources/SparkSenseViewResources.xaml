<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SparkSense.Presenter">

    <Image Source="/SparkSense;component/Resources/SparkTag.png" x:Key="SparkTagImage" />

    <SolidColorBrush x:Key="SelectedItemBorder" Color="Goldenrod" />
    <LinearGradientBrush x:Key="SelectedItemBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFFFE2" Offset="0.005" />
        <GradientStop Color="#FFFFFDA7" Offset="1" />
        <GradientStop Color="#EFFCE747" Offset="0.754" />
        <GradientStop Color="#72FCFC6E" Offset="0.447" />
    </LinearGradientBrush>

    <Style TargetType="{x:Type ListBoxItem}">
        <Style.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
        </Style.Resources>
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <DataTemplate x:Key="ItemDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Source="{Binding Path=IconSource}" />
            <Border Grid.Column="1" BorderThickness="1" Margin="3,0,0,0">
                <Border.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}}" Value="true">
                                <Setter Property="Border.Background" Value="{StaticResource SelectedItemBackground}" />
                                <Setter Property="Border.BorderBrush" Value="{StaticResource SelectedItemBorder}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock HorizontalAlignment="Stretch" Padding="0,2" Text="{Binding Path=DisplayText}" Background="{x:Null}" />
            </Border>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
